<style type="text/css">

	.new{

		background: white;
		width:50%;
		margin: auto;

	}

</style>	



<div class="container new">
	<h1>Rank Predictor</h1>
    <p >this rank predictor gives you the possible rank range according to the previous year data.</p>
	<hr>
	<div class="contain" >
		<input type="text" name="rank" class="rankofstu" placeholder="out of 360">
		<button class="btn">go</button>
		<hr>
		<div>
			<span class="display"></span>
		</div>

	</div>
</div>
<script type="text/javascript">
var x=document.querySelector(".rankofstu");
var y=document.querySelector(".btn");
var dis=document.querySelector(".display");

y.addEventListener("click",function(){

	var r=Number(x.value);
	if(r>360)
	{
		dis.textContent="marks out of 360";
	}else if(r>335)
	{
		dis.textContent="1-20";
	}else if(r<=335 && r>312){
		dis.textContent="21-100";
	}else if(r<=312 && r>295){
		dis.textContent="101-500";	
	}else if(r<=295 && r>280){
		dis.textContent="501-1000";
	}else if(r<=280 && r>260){
		dis.textContent="1001-2000";	
	}else if(r<=260 && r>210){
		dis.textContent="2001-5000";		
	}else if(r<=210 && r>177){
		dis.textContent="5001-7500";			
	}else if(r<=177 && r>150){
		dis.textContent="7501-10000";
	}else if(r<=150 && r>120){
		dis.textContent="10001-15000";		
	}else{
		dis.textContent=">15000";
	}


});	</script>


